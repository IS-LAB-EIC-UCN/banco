<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
	<persistence-unit name="bancoapp" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Entidades -->
		<class>cl.ucn.bean.Cliente</class>
		<properties>
			<!-- SQLite -->
			<property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:banco.db"/>
			<property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
			<!-- Mostrar SQL (usar CLAVES de Hibernate, no las JPA estÃ¡ndar) -->
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<!-- Crear al arrancar y DROPEAR al cerrar el EntityManagerFactory -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
			<!-- Cargar DATA tras crear el esquema -->
			<property name="jakarta.persistence.sql-load-script-source" value="data.sql"/>
		</properties>
	</persistence-unit>
</persistence>
